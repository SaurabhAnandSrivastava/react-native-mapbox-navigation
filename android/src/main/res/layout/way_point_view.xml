    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:minWidth="25dp"
        android:gravity="center"
        android:background="@drawable/waypoint_bg">

        <TextView
            android:id="@+id/indexWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
